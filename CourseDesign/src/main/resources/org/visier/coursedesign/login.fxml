<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.visier.coursedesign.Controller.LoginController"
            style="-fx-background-color: #f5f7fa;">
    <center>
        <VBox alignment="CENTER" spacing="20" prefWidth="450">
            <Text text="Library Management System" 
                  style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: linear-gradient(to right, #2c3e50, #3498db);">
                <effect>
                    <DropShadow color="#3498db80" radius="10" spread="0.2"/>
                </effect>
            </Text>
            
            <TabPane maxWidth="1000" prefWidth="450" tabClosingPolicy="UNAVAILABLE" 
                     style="-fx-background-color: transparent; -fx-tab-min-width: 100px;">
                <tabs>
                    <!-- Login Tab -->
                    <Tab text="Login" style="-fx-font-size: 14px;">
                        <content>
                            <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                                <GridPane hgap="15" vgap="15" alignment="CENTER">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" prefWidth="100"/>
                                        <ColumnConstraints prefWidth="200"/>
                                    </columnConstraints>
                                    
                                    <Label text="Username:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="usernameField" promptText="Enter username" style="-fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    
                                    <Label text="Password:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                </GridPane>
                                <Button text="Login" fx:id="loginButton" defaultButton="true"
                                        style="-fx-font-size: 14px; -fx-pref-width: 150px; -fx-padding: 5px 0; -fx-background-color: linear-gradient(to right, #3498db, #2980b9); -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <effect>
                                        <DropShadow color="rgba(52,152,219,0.5)" radius="5" spread="0.2"/>
                                    </effect>
                                </Button>
                                
                                <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 13px;" visible="false" wrapText="true" maxWidth="350"/>
                            </VBox>
                        </content>
                    </Tab>
                    
                    <Tab text="Register" style="-fx-font-size: 14px;">
                        <content>
                            <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                                <GridPane hgap="15" vgap="15" alignment="CENTER">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" prefWidth="100"/>
                                        <ColumnConstraints prefWidth="200"/>
                                    </columnConstraints>
                                    
                                    <Label text="Username:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="regUsernameField" promptText="Choose username" style="-fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    
                                    <Label text="Password:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <PasswordField fx:id="regPasswordField" promptText="Choose password" style="-fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    
                                    <Label text="Confirm:" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" style="-fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                </GridPane>

                                <Button text="Register" fx:id="registerButton"
                                        style="-fx-font-size: 14px; -fx-pref-width: 150px; -fx-padding: 5px 0; -fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;">
                                    <effect>
                                        <DropShadow color="rgba(46,204,113,0.5)" radius="5" spread="0.2"/>
                                    </effect>
                                </Button>
                                
                                <Label fx:id="regErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 13px;" visible="false" wrapText="true" maxWidth="350"/>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </center>
</BorderPane>