<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.visier.coursedesign.Controller.UserManagementController"
      spacing="10" style="-fx-padding: 20;">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <spacing>10</spacing>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="User Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="currentUserLabel" style="-fx-font-style: italic;"/>
    </HBox>
    
    <Separator/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search users..." prefWidth="300"/>
        <Button text="Search" fx:id="searchButton" onAction="#handleSearch"/>
        <Button text="Add User" fx:id="addButton" onAction="#handleAddUser"/>
    </HBox>
    
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="User ID" fx:id="userIdColumn" prefWidth="100"/>
            <TableColumn text="Username" fx:id="usernameColumn" prefWidth="150"/>
            <TableColumn text="Role" fx:id="roleColumn" prefWidth="100"/>
            <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="250"/>
        </columns>
    </TableView>
</VBox>