<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.visier.coursedesign.Controller.BooksManagementController"
      spacing="10" style="-fx-padding: 20;">
      
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <spacing>10</spacing>
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Books Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="currentUserLabel" style="-fx-font-style: italic;"/>
    </HBox>
    
    <Separator/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search books..." prefWidth="300"/>
        <Button text="Search" fx:id="searchButton"/>
        <Button text="Add Book" fx:id="addButton"/>
    </HBox>
    
    <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="80"/>
            <TableColumn text="Title" fx:id="titleColumn" prefWidth="200"/>
            <TableColumn text="Author" fx:id="authorColumn" prefWidth="150"/>
            <TableColumn text="ISBN" fx:id="isbnColumn" prefWidth="150"/>
            <TableColumn text="Available" fx:id="availableColumn" prefWidth="80"/>
        </columns>
    </TableView>
</VBox>